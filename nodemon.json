{
  "watch": [
    "src",
    "package.json",
    "tsconfig.json",
    ".env.development"
  ],
  "ignore": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,ts,json",
  "exec": "npx ts-node -r tsconfig-paths/register --transpileOnly src/app.ts"
}